<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Secure Voting System</title>
    <style>
        /* Google Font */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #74ebd5, #acb6e5);
        }

        .container {
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            width: 380px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            border-top: 5px solid #007bff;
        }

        h1 {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }

        p {
            font-size: 14px;
            color: #666;
        }

        .form-box {
            margin: 20px 0;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 8px;
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        input {
            width: 100%;
            padding: 12px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 15px;
            transition: 0.3s ease-in-out;
        }

        input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 15px;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: bold;
            background: #007bff;
            color: white;
            cursor: pointer;
            transition: 0.3s ease-in-out;
        }

        button:hover {
            background: #0056b3;
            transform: scale(1.03);
        }

        #error-msg {
            margin-top: 10px;
            font-size: 14px;
            display: none;
            color: red;
        }

        footer {
            margin-top: 15px;
            font-size: 12px;
            color: #555;
        }

        /* Responsive */
        @media (max-width: 400px) {
            .container {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üîí Secure Student Voting</h1>
        <p>Login to access the voting system</p>

        <div class="form-box">
            <input type="text" id="studentId" placeholder="Enter Student ID">
            <input type="password" id="password" placeholder="Enter Password">
            <button type="submit" class="btn" onclick="login()">Login</button>
        </div>

        <p id="error-msg"></p>

        <footer>¬© 2025 Secure Voting System</footer>
    </div>

    <script>
        async function login() {
            const studentId = document.getElementById("studentId").value.trim();
            const password = document.getElementById("password").value.trim();
            const errorMsg = document.getElementById("error-msg");

            if (!studentId || !password) {
                errorMsg.innerText = "‚ö†Ô∏è Please enter Student ID and Password!";
                errorMsg.style.color = "red";
                errorMsg.style.display = "block";
                return;
            }

            // Show loading message
            errorMsg.innerText = "Logging in...";
            errorMsg.style.color = "blue";
            errorMsg.style.display = "block";

            try {
                const res = await fetch("/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ studentId, password })
                });

                const data = await res.json();

                if (res.ok) {
                    // Store JWT Token in Local Storage
                    localStorage.setItem("token", data.token);
                    localStorage.setItem("studentId", data.studentId); // Store studentId

                    // Redirect to Voting Page
                    window.location.href = `/vote?studentId=${data.studentId}`;
                } else {
                    errorMsg.innerText = data.msg;
                    errorMsg.style.color = "red";
                }
            } catch (error) {
                console.error("Login Error:", error);
                errorMsg.innerText = "‚ö†Ô∏è Server not responding!";
                errorMsg.style.color = "red";
            }
        }
    </script>
</body>
</html>